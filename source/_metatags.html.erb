<meta name="description" content="<%= data.meta.meta_description %>">

<!-- Facebook Open Graph data -->
<meta property="og:title" content="<%= data.meta.meta_title %>">
<meta property="og:type" content="website">
<meta property="og:url" content="<%= data.meta.meta_url %>">
<meta property="og:image" content="<%= data.meta.meta_image %>">
<meta property="og:description" content="<%= data.meta.meta_description %>">
<meta property="og:site_name" content="<%= data.meta.meta_title %>">

<!-- Twitter Card data -->
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:site" content="<%= data.meta.twitter_account %>">
<meta name="twitter:title" content="<%= data.meta.meta_title %>">
<meta name="twitter:description" content="<%= data.meta.meta_description %>">
<meta name="twitter:creator" content="<%= data.meta.twitter_account %>">
<meta name="twitter:image:src" content="<%= data.meta.meta_image %>">

<!-- Google+ Schema.org markup -->
<meta itemprop="name" content="<%= data.meta.meta_title %>">
<meta itemprop="description" content="<%= data.meta.meta_description %>">
<meta itemprop="image" content="<%= data.meta.meta_image %>">
